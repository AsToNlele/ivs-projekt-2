        <Frame x:Name="Main" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0,0,287,0"/>
        <TextBox  x:Name="txt" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" Height="60" TextChanged="txt_TextChanged" IsReadOnly="True" Grid.Row="1" />

        <Button x:Name="btn9"  Content="9" Grid.Column="1" HorizontalAlignment="Left" Margin="67,93,0,0" VerticalAlignment="Top"   Click="btn9_Click" Grid.Row="1"/>
        <Button x:Name="btn8" Content="8" Grid.Column="1" HorizontalAlignment="Center" Margin="0,92,0,0"   VerticalAlignment="Top" Click="btn8_Click" Grid.Row="1"/>
